package main

import (
	"log"

	"{{.Module}}/app/web"
)

func main() {
	cfg := web.LoadConfig()
	app := web.New(cfg)

	log.Printf("listening on %s", cfg.Addr)
	if cfg.Dev {
		log.Printf("development mode enabled")
	}

	// Listen blocks and handles graceful shutdown on SIGINT/SIGTERM
	if err := app.Listen(cfg.Addr); err != nil {
		log.Fatal(err)
	}
}
