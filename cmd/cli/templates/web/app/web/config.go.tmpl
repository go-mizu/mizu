package web

import "os"

type Config struct {
	Addr string
	Dev  bool
}

func LoadConfig() Config {
	cfg := Config{
		Addr: ":8080",
		Dev:  false,
	}

	if addr := os.Getenv("ADDR"); addr != "" {
		cfg.Addr = addr
	}

	if dev := os.Getenv("DEV"); dev == "true" || dev == "1" {
		cfg.Dev = true
	}

	return cfg
}
