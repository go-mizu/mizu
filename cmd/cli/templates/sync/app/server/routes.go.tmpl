package server

import (
	"{{.Module}}/handler"
)

func (a *App) routes() {
	// Static files
	a.app.Mount("/static/", staticHandler(a.cfg.Dev))

	// Page routes
	a.app.Get("/", handler.Home(a.store))

	// Sync API (mounts at /_sync/*)
	a.syncTransport.Mount(a.app)

	// WebSocket for live updates
	a.app.Mount("/ws", a.liveServer.Handler())
}
