{
  "name": "forum",
  "display_name": "Forum",
  "description": "A production-ready forum platform with Reddit and Discourse features",
  "category": "blueprint",
  "tags": ["forum", "discussion", "community", "reddit", "discourse"],
  "author": "Mizu",
  "version": "1.0.0",
  "mizu_version": ">=0.1.0",
  "features": [
    "Hierarchical forums and subforums",
    "Threaded discussions with nested replies",
    "Voting system with karma tracking",
    "Moderation tools and permissions",
    "Multiple sorting algorithms (hot, top, best, controversial)",
    "Full-text search",
    "User badges and achievements",
    "Trust levels and reputation",
    "Tags and flair systems",
    "Markdown support",
    "DuckDB database"
  ],
  "setup": {
    "init_cmd": "go run ./cmd/forum init",
    "serve_cmd": "go run ./cmd/forum serve",
    "build_cmd": "make build",
    "test_cmd": "make test"
  },
  "files": {
    "exclude": [
      "*.db",
      "*.db.wal"
    ]
  }
}
