{
  "name": "workspace-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:node": "tsx watch src/node.ts",
    "build": "tsc && vite build",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:e2e": "vitest run src/tests/e2e",
    "test:e2e:sqlite": "TEST_DRIVER=sqlite vitest run src/tests/e2e",
    "test:e2e:postgres": "TEST_DRIVER=postgres vitest run src/tests/e2e --fileParallelism=false",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "db:migrate": "wrangler d1 migrations apply workspace",
    "db:seed": "tsx scripts/seed.ts"
  },
  "dependencies": {
    "hono": "^4.11.3",
    "zod": "^3.24.1",
    "@hono/zod-validator": "^0.4.3",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260103.0",
    "@hono/node-server": "^1.19.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "better-sqlite3": "^12.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}
