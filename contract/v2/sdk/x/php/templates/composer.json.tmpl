{{define "composer.json.tmpl"}}{
    "name": {{jsonQuote .PackageName}},
    "description": {{if .Service.Description}}{{jsonQuote .Service.Description}}{{else}}"PHP SDK for {{.Service.Name}}"{{end}},
    "type": "library",
    "license": {{jsonQuote .License}},
{{- if .Author}}
    "authors": [
        {
            "name": {{jsonQuote .Author}}
        }
    ],
{{- end}}
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "{{.Namespace}}\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{.Namespace}}\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
{{end}}