{{define "opam.tmpl"}}# Code generated by sdkocaml. DO NOT EDIT.

opam-version: "2.0"
name: "{{.PackageName}}"
version: "{{.Version}}"
synopsis: "{{.Synopsis}}"
description: "{{.Synopsis}}"
maintainer: ["{{.Author}}"]
authors: ["{{.Author}}"]
license: "{{.License}}"
homepage: "https://github.com/example/{{.PackageName}}"
bug-reports: "https://github.com/example/{{.PackageName}}/issues"
dev-repo: "git+https://github.com/example/{{.PackageName}}.git"

depends: [
  "ocaml" {>= "4.14"}
  "dune" {>= "3.0"}
  "yojson" {>= "2.0"}
  "ppx_yojson_conv" {>= "0.15"}
  "cohttp-lwt-unix" {>= "5.0"}
  "lwt" {>= "5.6"}
  "uri" {>= "4.0"}
  "logs" {>= "0.7"}
{{- if .HasDate}}
  "ptime" {>= "1.0"}
{{- end}}
  "alcotest" {with-test}
  "alcotest-lwt" {with-test}
]

build: [
  ["dune" "subst"] {dev}
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
{{end}}