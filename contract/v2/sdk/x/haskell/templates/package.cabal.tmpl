{{define "package.cabal.tmpl"}}-- Code generated by sdkhaskell. DO NOT EDIT.
cabal-version:      2.4
name:               {{.PackageName}}
version:            {{.Version}}
synopsis:           {{.Synopsis}}
license:            {{.License}}
author:             {{.Author}}
maintainer:         {{.Author}}
category:           Web
build-type:         Simple

library
    exposed-modules:
        {{.ModuleName}}
        {{.ModuleName}}.Client
        {{.ModuleName}}.Config
        {{.ModuleName}}.Types
        {{.ModuleName}}.Resources
        {{.ModuleName}}.Streaming
        {{.ModuleName}}.Errors

    build-depends:
        base >= 4.14 && < 5,
        aeson >= 2.0,
        bytestring >= 0.10,
        conduit >= 1.3,
        containers >= 0.6,
        http-client >= 0.7,
        http-client-tls >= 0.3,
        http-conduit >= 2.3,
        http-types >= 0.12,
        text >= 1.2,
        time >= 1.9,
        mtl >= 2.2,
        transformers >= 0.5,
        base64-bytestring >= 1.0

    hs-source-dirs:   src
    default-language: Haskell2010
    ghc-options:      -Wall

    default-extensions:
        OverloadedStrings
        DeriveGeneric
        DuplicateRecordFields
        RecordWildCards
        ScopedTypeVariables
        LambdaCase
        TypeApplications

test-suite {{.PackageName}}-test
    type:             exitcode-stdio-1.0
    main-is:          Spec.hs
    hs-source-dirs:   test
    default-language: Haskell2010
    build-depends:
        base >= 4.14 && < 5,
        {{.PackageName}},
        hspec >= 2.10,
        aeson >= 2.0
{{end}}