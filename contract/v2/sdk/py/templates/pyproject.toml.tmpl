# sdk/py/templates/pyproject.toml.tmpl
{{define "pyproject.toml.tmpl"}}
[project]
name = "{{.ProjectName}}"
version = "{{.Version}}"
description = "{{if .Service.Description}}{{.Service.Description}}{{else}}Python SDK for {{.Service.Name}}{{end}}"
readme = "README.md"
requires-python = ">=3.10"
authors = [{ name = "{{if .Author}}{{.Author}}{{else}}Generated{{end}}" }]
license = { text = "{{if .License}}{{.License}}{{else}}MIT{{end}}" }

dependencies = [
  "httpx>=0.27",
  "pydantic>=2.7",
]

[project.optional-dependencies]
dev = [
  "pytest>=8",
  "ruff>=0.6",
  "mypy>=1.10",
]

[build-system]
requires = ["hatchling>=1.24"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/{{.Module}}"]

[tool.ruff]
line-length = 100
target-version = "py310"

{{end}}
